<view>
	<SearchInput></SearchInput>
	<Tabs tabs="{{tabs}}" bind:itemChange="handleItemChange"></Tabs>

	<block wx:if="{{tabs[0].isActive}}">
		<view class="first_tab">
			<navigator 
				class="goods_item"
				wx:for="{{goodsList}}"
				wx:key="goods_id"
				url="/pages/goods_detail/index?goods_id={{item.goods_id}}"
			>
				<!-- 左侧 图片 -->
				<view class="goods_img_wrap">
					<image 
						mode="widthFix" 
						src="{{item.goods_small_logo || 'https://ww1.sinaimg.cn/large/007rAy9hgy1g24by9t530j30i20i2glm.jpg'}}" 
					/>
				</view>
				<!-- 右侧 商品信息 -->
				<view class="goods_info_wrap">
					<view class="goods_name">{{item.goods_name}}</view>
					<view class="goods_price">￥{{item.goods_price}}</view>
				</view>

			</navigator>

		</view>
	</block>
	
	<block wx:elif="{{tabs[1].isActive}}">功能待完善....</block>
	<block wx:else>欢迎您的到来....</block>

</view>